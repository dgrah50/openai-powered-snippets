{
  "name": "ai-powered-snippets",
  "displayName": "AI Enhanced Snippets",
  "description": "The Visual Studio Code extension enables developers to integrate the ChatGPT prompt into VS Code",
  "version": "0.0.30",
  "icon": "media/icon.png",
  "keywords": [
    "chatgpt",
    "gpt",
    "prompt",
    "openai",
    "snippet"
  ],
  "publisher": "dgrah50",
  "repository": {
    "type": "git",
    "url": "https://github.com/dgrah50/openai-powered-snippets.git"
  },
  "engines": {
    "vscode": "^1.62.0"
  },
  "categories": [
    "Snippets"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "menus": {
      "commandPalette": [
        {
          "command": "ai-powered-snippets.run"
        }
      ]
    },
    "commands": [
      {
        "command": "ai-powered-snippets.run",
        "title": "Run OpenAI Snippet"
      }
    ],
    "keybindings": [
      {
        "command": "ai-powered-snippets.run",
        "key": "ctrl+o ctrl+a"
      }
    ],
    "configuration": {
      "title": "GPT Prompt Integrator",
      "type": "object",
      "properties": {
        "ai-powered-snippets.openAIToken": {
          "type": "string",
          "default": "",
          "description": "Your openai token",
          "order": 1
        },
        "ai-powered-snippets.snippetFiles": {
          "type": "string",
          "default": "",
          "description": "Path for user defined snippet files. For multiple path separate with ';'  C:\\MySnipFolder1;C:\\MySnipFolder2\\snip.js",
          "order": 2
        },
        "ai-powered-snippets.openAIModel": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "description": "openai model",
          "order": 3
        },
        "ai-powered-snippets.openAIEndpoint": {
          "type": "string",
          "default": "https://api.openai.com/v1",
          "description": "OpenAI API endpoint",
          "order": 4
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "~20.14.2",
    "@types/vscode": "^1.61.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4",
    "vite": "^5.3.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.2.1",
    "openai": "^3.3.0",
    "ts-loader": "^9.5.1",
    "webpack": "^5.92.0",
    "yaml": "^2.2.1"
  }
}
